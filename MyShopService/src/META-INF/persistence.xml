<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MyShopServicePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entites.Produit</class>
    <class>entites.Type</class>
    <class>entites.Vente</class>
    <class>entites.Client</class>
    <class>entites.Compte</class>
    <class>entites.TypeCompte</class>
    <class>entites.Livraison</class>
    <class>entites.Fournisseur</class>
    <class>entites.Concerner</class>
    <class>entites.ContenirVente</class>
    <class>entites.HistoriqueVente</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:sqlite:test.sqlite"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
      <property name="javax.persistence.jdbc.password" value=""/>
 
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
 
    </properties>
  </persistence-unit>
</persistence>